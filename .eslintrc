{
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module",
    "ecmaVersion": 6
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": ["airbnb-base", "eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "rules": {
    "indent": [2, 4],
    "comma-dangle": 0
  },
  "plugins": [
    "babel",
    "import",
    "react",
    "lodash"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.dev.js"
      }
    }
  }
}